VER := $(v)
ifeq ($(VER),147)
	DOTVER := 1.4.7
	GRADLE := no
	ASSETS := mods
else ifeq ($(VER),152)
	DOTVER := 1.5.2
	GRADLE := no
	ASSETS := mods
else ifeq ($(VER),162)
	DOTVER := 1.6.2
	GRADLE := no
	ASSETS := assets
else ifeq ($(VER),164)
	DOTVER := 1.6.4
	GRADLE := no
	ASSETS := assets
else ifeq ($(VER),172)
	DOTVER := 1.7.2
	GRADLE := yes
	ASSETS := assets
else
$(error No version specified, call with v=147|152|162|164|172)
endif

ifeq ($(GRADLE),no)
	BASE := /home/mcdev/forge-$(DOTVER)/mcp
	SRC := $(BASE)/src/minecraft
	APIJAR := $(BASE)/lib
	APISRC := $(SRC)
	REOBF := $(BASE)/reobf/minecraft
else
	BASE := /home/mcdev/forge-$(DOTVER)
	SRC := $(BASE)/src/main/java/
	APIJAR := $(BASE)/lib
	APISRC := $(BASE)/src/api/java
	REOBF := $(BASE)/build/classes/main
endif

P := $(PWD)

ifneq ($(r),)
	NOW := $(shell /bin/date +%Y)$(shell /bin/date +%m)$(shell /bin/date +%d)-r$(r)
else
	NOW := $(shell /bin/date +%Y)$(shell /bin/date +%m)$(shell /bin/date +%d)-$(shell /bin/date +%H)$(shell /bin/date +%M)
endif

AUMOD := $(shell export m=$(MOD) ; echo AU$${m^})
MODUPPER := $(shell export m=$(MOD) ; echo $${m^})
